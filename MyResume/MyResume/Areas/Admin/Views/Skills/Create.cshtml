@model MyResume.Models.Skills

@{
    ViewData["Title"] = "Create"; Layout = "~/Areas/Admin/Views/_Layout.cshtml";
}

<div class="card col-md-4" style="margin-top:3%;margin-left:32%; ">
    <div class="card-header">
        رکورد جدیدی ایجاد کنید
    </div>
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
