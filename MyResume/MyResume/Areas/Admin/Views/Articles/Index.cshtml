@model IEnumerable<MyResume.Models.Articles>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        لیست مقاله ها 
    </div>
    <div class="card-body">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PicAddress)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.About)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Link)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PicAddress)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.About)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Link)
                        </td>
                        <td>
                            <div class="btn btn-primary"><a style="color:black" asp-action="Edit" asp-route-id="@item.Id">Edit</a></div>
                            <div class="btn btn-danger"><a style="color:black" asp-action="Delete" asp-route-id="@item.Id">Delete</a></div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<p>
    <div class="btn btn-primary" style="margin-left:5%;"><a style="color:black" asp-action="Create">Create New</a></div>
</p>


