@model ReadAllViewModel
@{
    ViewData["Title"] = "Index";
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>MY Resume</title>

    <!-- Favicons
        ================================================== -->
    <link rel="shortcut icon" href="~/img/favicon.ico" type="image/x-icon">
    <link rel="icon" href="~/img/favicon.ico" type="image/x-icon">
    <!-- / Favicons
    ================================================== -->
    <!-- >> CSS
    ============================================================================== -->
    <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <!-- Google Web Fonts -->
    <link href='https://fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css'>
    <!-- Font Awesome -->
    <link href="~/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <!-- Nivo Lightbox -->
    <link href="~/vendor/nivo-lightbox/nivo-lightbox.css" rel="stylesheet">
    <link rel="stylesheet" href="~/vendor/nivo-lightbox/themes/default/default.css" type="text/css" />
    <!-- /Nivo Lightbox -->
    <!-- Perfect ScrollBar -->
    <link href="~/vendor/perfect-scrollbar/css/perfect-scrollbar.min.css" rel="stylesheet">
    <!-- owl carousel -->
    <link href="~/vendor/owl.carousel/owl-carousel/owl.carousel.css" rel="stylesheet">
    <link href="~/vendor/owl.carousel/owl-carousel/owl.theme.css" rel="stylesheet">
    <!-- Main Styles -->
    <link href="~/css/styles.css" rel="stylesheet">

    <!-- >> /CSS
    ============================================================================== -->
</head>
<body>
    <!-- Page Loader
    ========================================================= -->
    <div class="loader-container" id="page-loader">
        <div class="loading-wrapper">
            <div class="loader-animation" id="loader-animation">
                <span class="loader"><span class="loader-inner"></span></span>
            </div>
            <!-- Edit With Your Name -->
            <div class="loader-name" id="loader-name">
               <strong>Hady_Khann</strong>
            </div>
            <!-- /Edit With Your Name -->
            <!-- Edit With Your Job -->
            <p class="loader-job" id="loader-job">برنامه نویس و طراح</p>
            <!-- /Edit With Your Job -->
        </div>
    </div>
    <!-- /End of Page loader
    ========================================================= -->
    <!-- Main Content
    ================================================== -->
    <section id="body" class="">
        <!-- Login -->
        <a asp-area="Admin" asp-controller="AdminPanel" asp-action="Index" style="position:absolute;top:2%;right:2%;border:solid 2px;">مدیریت</a>
        <!-- /Login -->
        <div class="container">
            <div class="row">


                <!-- MAIN MENU -->
                <div class="main-menu" id="main-menu">
                    <ul class="main-menu-list">
                        <li><a href="#page-resume" class="link-home">صفحه خانه</a></li>
                        <li><a href="#page-resume" class="link-page">رزومه</a></li>
                        <li><a href="#page-skills" class="link-page">مهارت ها</a></li>
                        <li><a href="#page-blog" class="link-page">مقالات</a></li>
                        <li><a href="#page-contact" class="link-page">راه های ارتباطی با من</a></li>
                    </ul>
                </div>
                <!-- /MAIN MENU -->
                <!-- SECTION: vCard Body  -->
                <div class="section-vcardbody section-home" id="section-home">
                    <!-- Profile pic-->
                    <div class="vcard-profile-pic">
                        <img src="~/img/profile2.jpg" id="profile2" alt="" />
                        <img src="~/img/profile.jpg" id="profile1" class="profileActive" alt="" />
                    </div>
                    <!-- /Profile pic -->
                    <!-- Description -->
                    <div class="vcard-profile-description">
                        <!-- Profile title -->
                        <h1 class="profile-title"> <span class="color1">Hady_Khann</span></h1>
                        <h2 class="profile-subtitle"></h2>
                        <!-- /Profile Title -->
                        <!-- Description Text -->
                        <hr class="hr1">
                        <div class="vcard-profile-description-text">
                            <p>برنامه نویس , طراح وب , عکاس , نقاش , اکتیو و پسیو کار شبکه و.......</p>
                        </div>
                        <!--/ Description Text -->
                        <!-- Description feature -->
                        <div class="vcard-profile-description-feature">
                            <!-- item -->
                            <div class="vcard-profile-description-ft-item">
                                <p>email:  hady.khann@gmail.com / phone +98 938 0939 911</p>
                            </div>
                            <!-- item -->
                        </div>
                        <!-- /Description feature -->
                    </div>
                    <!-- /Description -->
                    <!-- Footer -->
                    <div class="vcard-footer">
                        <!-- Social Icons -->
                        <div class="footer-social-icons">
                            <a href="#"><i class="fa fa-instagram"></i></a>
                            <a href="#"><i class="fa fa-facebook"></i></a>
                            <a href="#"><i class="fa fa-twitter"></i></a>
                            <a href="#"><i class="fa fa-linkedin"></i></a>
                            <a href="#"><i class="fa fa-youtube"></i></a>
                        </div>
                        <!-- /Social Icons -->
                    </div>
                </div>
                <!-- /SECTION: vCard Body  -->
                <!-- PAGE: RESUME -->
                <div class="section-vcardbody section-page" id="page-resume">

                    <!-- SECTION: Education -->
                    <div class="section-education">
                        <!-- Section title -->
                        <h2 class="section-title" dir="rtl">رزومه</h2>
                        <!-- /Section title -->
                        <!-- Buttons -->
                        <div class="resume-buttons header-page-buttons" dir="rtl">
                            <!-- Download CV button -->
                            <a href="#" class="btn btn-default btn-default2"><i class="fa fa-download"></i>&nbsp; دانلود رزومه من</a>
                            <!-- /Download CV button -->
                            <!-- Get in Touch button -->
                            <a href="#page-contact" class="btn btn-default btn-default2 link-page"><i class="fa fa-download"></i>&nbsp;  راه های ارتباطی با من</a>
                            <!-- /Get in Touch button -->
                        </div>
                        <!-- /Buttons -->

                        <h2 class="section-title2" dir="rtl"><i class="fa fa-university"></i>&nbsp; تحصیلات</h2>

                        <!-- Resume Item -->
                        @{
                            foreach (var item in Model.Educations)
                            {
                                <div class="resume-item" dir="rtl">
                                    <!-- Graduation title -->
                                    <h3 class="section-item-title-1">@item.Title</h3>
                                    <!-- /Graduation title -->
                                    <!-- Graduation time -->
                                    <h4 class="graduation-time">@item.Explain1</h4>
                                    <!-- /Graduation time -->
                                    <!-- content -->
                                    <div class="graduation-description">
                                        <p>@item.Explain2</p>
                                    </div>
                                    <!-- /Content -->
                                </div>
                            }
                        }
                        <!-- /Resume Item -->
                    </div>
                    <!--/ SECTION: Education -->
                    <!-- SECTION: WORK EXPERIENCE -->
                    <div class="section-education">

                        <h2 class="section-title2" dir="rtl"><i class="fa fa-flag"></i>&nbsp; تجربه های کاری</h2>

                        <!-- Resume Item -->
                        @{
                            foreach (var item in Model.Experiences)
                            {
                                <div class="resume-item" dir="rtl">
                                    <!-- Work Place -->
                                    <h3 class="section-item-title-1">@item.Title</h3>
                                    <!-- /Work Place -->
                                    <!-- Job Time -->
                                    <h4 class="job">@item.Explain1</h4>
                                    <!-- /Job Time-->
                                    <!-- content -->
                                    <div class="graduation-description">
                                        <p>@item.Explain2</p>
                                    </div>
                                    <!-- /Content -->
                                </div>
                            }
                        }
                        <!-- /Resume Item -->
                    </div>
                    <!--/ SECTION: WORK EXPERIENCE -->

                    <h2 class="section-title2" dir="rtl"><i class="fa fa-commenting"></i>&nbsp; اکیپ و پشتیبانی</h2>

                    <!-- Testimonials -->
                    <div class="testimonials">
                        <!-- Testimonial Slides -->
                        <div class="testimonial-slides" id="testimonial-carousel">
                            <!-- item -->
                            <div class="testimonial-item">
                                <!-- Testimonial Content -->
                                <div class="testimonial-content">
                                    <p>پاسخگویی در کمتر از 24 ساعت</p>
                                </div>
                                <!-- /Testimonial Content -->
                                <!-- Testimonial Author -->
                                <div class="testimonial-credits">
                                    <!-- picture -->
                                    <div class="testimonial-picture">
                                        <img src="~/img/team2.jpg" alt="" />
                                    </div>
                                    <!-- /picture -->
                                    <p class="testimonial-author">ونلوپه</p>
                                    <p class="testimonial-firm">راننده مملکت</p>
                                </div>
                                <!-- /Testimonial Author -->
                            </div>
                            <!-- /item -->
                            <!-- item -->
                            <div class="testimonial-item">
                                <!-- Testimonial Content -->
                                <div class="testimonial-content">
                                    <p>"پاسخگوی در ثانیه و یا قبل از اینکه حتی سوالی مطرح شه</p>
                                </div>
                                <!-- /Testimonial Content -->
                                <!-- Testimonial Author -->
                                <div class="testimonial-credits">
                                    <!-- picture -->
                                    <div class="testimonial-picture">
                                        <img src="~/img/team1.jpg" alt="" />
                                    </div>
                                    <!-- /picture -->
                                    <p class="testimonial-author">فلیکس تعمیر کار</p>
                                    <p class="testimonial-firm">تعمیر کار مملکت</p>
                                </div>
                                <!-- /Testimonial Author -->
                            </div>
                            <!-- /item -->
                            <!-- item -->
                            <div class="testimonial-item">
                                <!-- Testimonial Content -->
                                <div class="testimonial-content">
                                    <p>زمانی که پشت گوشتونو دیدین حتما پاسخ دادنشو میبینین</p>
                                </div>
                                <!-- /Testimonial Content -->
                                <!-- Testimonial Author -->
                                <div class="testimonial-credits">
                                    <!-- picture -->
                                    <div class="testimonial-picture">
                                        <img src="~/img/team3.jpg" alt="" />
                                    </div>
                                    <!-- /picture -->
                                    <p class="testimonial-author">نورمن</p>
                                    <p class="testimonial-firm">------</p>
                                </div>
                                <!-- /Testimonial Author -->
                            </div>
                            <!-- /item -->
                        </div>
                        <!-- Testimonial Slides -->
                    </div>
                    <!-- /testimonials -->

                    <div class="page-footer">
                        <!-- Buttons -->
                        <div class="resume-buttons" dir="rtl">
                            <!-- Download CV button -->
                            <a href="#" class="btn btn-default btn-default2"><i class="fa fa-download"></i>&nbsp; دانلود رزومه من</a>
                            <!-- /Download CV button -->
                            <!-- Get in Touch button -->
                            <a href="#page-contact" class="btn btn-default btn-default2 link-page"><i class="fa fa-download"></i>&nbsp; راه های ارتباطی با من</a>
                            <!-- /Get in Touch button -->
                        </div>
                        <!-- /Buttons -->
                        <!-- Quote -->
                        <p class="footer-quote" dir="rtl">ای نامه که میروی به سویش از طرف من هیچی نمیخواد بهش بگی<br /><i>خردمندان درمانده</i></p>
                        <!-- /Quote -->
                    </div>

                </div>
                <!-- /PAGE: RESUME  -->
                <!-- SECTION: SKILLS-->
                <div class="section-vcardbody section-page" id="page-skills">
                    <div class="section-skills">

                        <!-- Section title -->
                        <h2 class="section-title">حرفه ها</h2>
                        <!-- /Section title -->
                        <!-- Subtitle -->
                        <h3 class="section-item-title-2"><i class="fa fa-users"></i>&nbsp;&nbsp; حرفه های عمومی</h3>
                        <!-- /Subtitle -->
                        <!-- Skils List -->
                        <ul class="skills-list">
                            <!-- item-list -->
                            @{
                                foreach (var item in Model.Skills)
                                {
                                    if (item.Type.Contains("general"))
                                    {
                                        <li>
                                            <div class="progress">
                                                <div class="progress-bar" role="progressbar" data-percent="@item.Percentage%" style="width:@item.Percentage%;">
                                                    <span class="sr-only">@item.Percentage% Complete</span>
                                                </div>
                                                <span class="progress-type">@item.Title</span>
                                                <span class="progress-completed">@item.Percentage%</span>
                                            </div>
                                        </li>
                                    }
                                }
                            }

                            <!-- /item list -->
                        </ul>
                        <!-- /Skils List -->
                        <!-- Subtitle -->
                        <h3 class="section-item-title-2"><i class="fa fa-laptop"></i>&nbsp;&nbsp; حرفه های نرم افزاری</h3>
                        <!-- /Subtitle -->
                        <!-- Skils List -->
                        <ul class="skills-list">
                            <!-- item-list -->
                            @{
                                foreach (var item in Model.Skills)
                                {
                                    if (item.Type.Contains("software"))
                                    {
                                        <li>
                                            <div class="progress">
                                                <div class="progress-bar" role="progressbar" data-percent="@item.Percentage%" style="width:@item.Percentage%;">
                                                    <span class="sr-only">@item.Percentage% Complete</span>
                                                </div>
                                                <span class="progress-type">@item.Title</span>
                                                <span class="progress-completed">@item.Percentage%</span>
                                            </div>
                                        </li>
                                    }
                                }
                            }
                            <!-- /item list -->
                        </ul>
                        <!-- /Skils List -->
                        <!-- Subtitle -->
                        <h3 class="section-item-title-2"><i class="fa fa-code"></i>&nbsp;&nbsp; حرفه های کد زنی</h3>
                        <!-- /Subtitle -->
                        <!-- Skils List -->
                        <ul class="skills-list">
                            <!-- item-list -->
                            @{
                                foreach (var item in Model.Skills)
                                {
                                    if (item.Type.Contains("code"))
                                    {
                                        <li>
                                            <div class="progress">
                                                <div class="progress-bar" role="progressbar" data-percent="@item.Percentage%" style="width:@item.Percentage%;">
                                                    <span class="sr-only">@item.Percentage% Complete</span>
                                                </div>
                                                <span class="progress-type">@item.Title</span>
                                                <span class="progress-completed">@item.Percentage%</span>
                                            </div>
                                        </li>
                                    }
                                }
                            }
                            <!-- /item list -->
                        </ul>
                        <!-- /Skils List -->

                    </div>
                </div>       @*done*@
                <!-- /SECTION: SKILLS  -->
                <!-- SECTION: BLOG-->
                <div class="section-vcardbody section-page" id="page-blog">
                    <div class="section-blog">

                        <!-- Section title -->
                        <h2 class="section-title" dir="rtl">مقاله ها</h2>
                        <!-- /Section title -->
                        <!-- BLOG POSTS -->
                        <div class="blog-posts">
                            <!-- blog-item -->

                            @{

                                foreach (var item in Model.Articles)
                                {
                                    <div class="blog-item">
                                        <div class="blog-item-wrapper">
                                            <!-- blog item thumbnail -->
                                            <div class="blog-item-thumb">
                                                <a href="~/@item.Link" class="loadPost"><img src="~/@item.PicAddress" alt=""></a>
                                            </div>
                                            <!-- /blog item thumbnail -->
                                            <!-- Blog item - infos -->
                                            <div class="blog-item-infos">
                                                <!-- blog-item-title -->
                                                <div class="blog-item-title-wrapper">
                                                    <h2 dir="rtl" class="blog-item-title title-border"><a href="~/@item.Link" class="loadPost">@item.Title</a></h2>
                                                </div>
                                                <!-- /blog-item-title -->
                                                <!-- blog item - description -->
                                                <div class="blog-item-description">
                                                    <p dir="rtl"><a href="~/@item.Link" class="loadPost">@item.About</a></p>
                                                </div>
                                                <!-- /blog-item-description -->
                                                <!-- blog item - link -->
                                                <div class="blog-item-link">
                                                    <a href="~/@item.Link" class="btn btn-default loadPost" style="float:right">ادامه مطلب</a>
                                                    <br />
                                                </div>
                                                <!-- /blog item - link -->
                                            </div>
                                            <!-- /blog item - infos -->
                                        </div>
                                    </div>
                                }
                            };

                            <!-- /blog-item -->
                        </div>
                        <!-- /BLOG POSTS -->
                        <!-- Pagination -->
                        <div class="section-pagination">
                            <div class="row">
                                <div class="col-xs-12">
                                    <span class="pagination-numbers">
                                        <a href="#">1</a>
                                        <a href="#">2</a>
                                        <a href="#">3</a>
                                        <a href="#">4</a>
                                        <a href="#">5</a>
                                        <a href="#">6</a>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <!-- /Pagination -->
                    </div>
                </div>     @*done*@
                <!-- /SECTION: BLOG  -->
                <!-- SECTION: BLOG SINGLE-->
                <div class="section-vcardbody section-page section-page-single" id="page-blog-single">
                    <div class="section-blog-single">
                        <!-- Load the single.html content via AJAX -->
                        <div id="postHere"></div>
                        <!-- /Load the single.html content via AJAX -->
                    </div>
                </div>
                <!-- /SECTION: BLOG SINGLE  -->
                <!-- SECTION: CONTACT-->
                <div class="section-vcardbody section-page" id="page-contact">
                    <div class="section-contact">

                        <!-- Section title -->
                        <h2 class="section-title">راه های ارتباطی با من</h2>
                        <!-- /Section title -->

                        <div class="map">
                            <div class="map-overlay"></div>
                            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d8352.985568651915!2d-0.12905994797222892!3d51.50665753790812!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47d8a00baf21de75%3A0x52963a5addd52a99!2sLondon%2C+UK!5e0!3m2!1spt-BR!2sbr!4v1443128181953" height="250" style="border:0" allowfullscreen></iframe>
                        </div>

                        <!-- Contact infos -->
                        <div class="contact-infos">
                            <h4 class="contact-subtitle-1"><i class="fa fa-map"></i>&nbsp;   آدرس</h4>
                            <p>لندن یکم اونور تر از روم</p>
                            <h4 class="contact-subtitle-1"><i class="fa fa-phone-square"></i>&nbsp; تلفن تماس</h4>
                            <p>+61 3 8376 6284</p>
                            <h4 class="contact-subtitle-1"><i class="fa fa-envelope"></i>&nbsp; ایمیل</h4>
                            <p>oneeyedking@fmail.com</p>
                        </div>
                        <!-- /Contact infos -->
                    </div>
                </div>
                <!-- /SECTION: CONTACT  -->


            </div>
        </div>

    </section>
    <!-- /Main Content
    ================================================== -->
    <!-- Contact Form - Ajax Messages
    ========================================================= -->
    <!-- Form Sucess -->
    <div class="form-result modal-wrap" id="contactSuccess">
        <div class="modal-bg"></div>
        <div class="modal-content">
            <h4 class="modal-title"><i class="fa fa-check-circle"></i> موفق آمیز بود!</h4>
            <p>پیامتون به خوبی و خوشی ارسال شد</p>
        </div>
    </div>
    <!-- /Form Sucess -->
    <!-- form-error -->
    <div class="form-result modal-wrap" id="contactError">
        <div class="modal-bg"></div>
        <div class="modal-content">
            <h4 class="modal-title"><i class="fa fa-times"></i> اکه هی</h4>
            <p>انگار یه مشکل موقع ارسال پیام پیش اومده</p>
        </div>
    </div>
    <!-- /form-error -->
    <!-- Contact Form - Ajax Messages
    ========================================================= -->
